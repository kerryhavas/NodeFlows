
// woah!  I can use whack whack comments in jade
// also, more importantly, you can include things in the master page
block stylesheets
  link(rel='stylesheet', href='/stylesheets/nodeFlows.css')

block javascripts


section(class="main-content")
  h3= title
  div= 'Id: ' + workflow._id
  div= 'Type: ' + workflow.workflowType
  div= 'Definition: ' + workflow.workflowDefinition
  div queueItemId: <a href="/queue/history?queueItemId=#{workflow.queueItemId}"> #{workflow.queueItemId} </a>
  div= 'TimeStamp: ' + workflow.timeStamp 
  div= 'CurrentStepName: ' + workflow.currentStepName
  div= 'Status: ' + workflow.status
  div= 'queueWorkerId: ' + workflow.queueWorkerId
  div= 'Serialized Workflow: ' + JSON.stringify(workflow)

  div

  h3= 'History'

  table
    thead
        tr
            th Task
            th TimeStamp
            th QueueWorkerId
            th Notes
    tbody
        each historyItem in history
            tr
                td= historyItem.task
                td= historyItem.timeStamp-workflow.timeStamp
                td  <a href='/workers/history?workerId=#{historyItem.queueWorkerId}'>#{historyItem.queueWorkerId}</a>
                td= historyItem.notes

div

  
