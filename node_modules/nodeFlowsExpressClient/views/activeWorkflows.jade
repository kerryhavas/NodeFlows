block stylesheets
  link(rel='stylesheet', href='/stylesheets/chat.css')

block javascripts
 script(src='/socket.io/socket.io.js')

section(class="main-content")
  h3= title + '3'

    div= 'Total Workflows: ' + workflows.length

  table
      thead
            tr
                th View
                th Delete
                th Pause
                th Type
                th timeStamp
                th Status
                th Current Step
                th queueItemId
                th workerid
        tbody
          each op in workflows
                tr
                    td
                        <a href='/workflows/active/view?workflowid=#{op._id}'>View</a>
                    td
                        <a href='/workflows/active/delete?workflowid=#{op._id}'>Delete</a>
                    td
                        if op.status=='Paused'
                            <a href='resume?workflowid=#{op._id}'>Resume</a>
                        else
                            <a href='pause?workflowid=#{op._id}'>Pause</a>
                    td 
                        =op.workflowType
                    td 
                        #{new Date(op.timeStamp).getHours()} : #{new Date(op.timeStamp).getMinutes()} : #{new Date(op.timeStamp).getSeconds()}
                    td
                        =op.status
                    td
                        =op.CurrentStepName
                    td
                        <a href='../../queue/history?queueItemId=#{op.queueItemId}'>#{op.queueItemId}</a>
                    td
                        <a href='/queue/workers/view?workerId=#{op.queueWorkerId}'>#{op.queueWorkerId}</a>



 


  
