// also, more importantly, you can include things in the master page
block stylesheets
  link(rel='stylesheet', href='/stylesheets/chat.css')

block javascripts
 

section(class="main-content")
  h3= title
  div= 'Count: '+ queueWorkers.length
  hr
  table
    thead
        tr
            th Type
            th Worker
            th Status
            th Workflow
            th QueueItem
            th Activity
            th Busy
            th Idle
        
    tbody
        each queueWorker in queueWorkers
            tr
                td= queueWorker.type
                td <a href="view?workerId=#{queueWorker._id}">#{queueWorker._id}</a>
                td= queueWorker.status
                td= queueWorker.workflowId
                td= queueWorker.queueItemId
                td= queueWorker.activityCount
                td= queueWorker.busyCount
                td= queueWorker.idleCount


 


  
