block stylesheets
  link(rel='stylesheet', href='/stylesheets/chat.css')

block javascripts
 

section(class="main-content")
  h3= title

    div= 'Workflow Count: ' + queue.length

  table
    thead
        tr
            th Elapsed
            th Type
            th QueueItemId
            th Pri
            th locked By
            th Status
    tbody
        each queueItem in queue
            tr
                td= (new Date().getTime())-queueItem.timeStamp
                td= queueItem.type
                td <a href='../../queue/history?queueItemId=#{queueItem._id}'>#{queueItem._id}</a>
                td= queueItem.priority
                td <a href='/queue/workers/view?workerId=#{queueItem.lockedBy}'>#{queueItem.lockedBy}</a>
                td= queueItem.status


 


  
