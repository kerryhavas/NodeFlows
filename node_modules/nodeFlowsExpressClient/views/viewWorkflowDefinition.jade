block stylesheets
  link(rel='stylesheet', href='/stylesheets/nodeFlows.css')

block javascripts
 

section(class="main-content")
  h3= title

div#flowContainer
    div#flowAddBar
        <img src="" alt="" class=flowAddImage />
    each step in workflowDefinition.Steps
        div#flowStep
            div
                =step.Name
            div
                =step.Type
            div
                =step.nextStep
            div
                =JSON.stringify(step.args)
            div
                ='active:' + step.active
        div#flowAddBar
            <img src="" alt="" class=flowAddImage />