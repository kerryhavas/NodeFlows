block stylesheets
  link(rel='stylesheet', href='/stylesheets/chat.css')

block javascripts
 

section(class="main-content")

  h3= 'Queue Item Details'

  div= 'queueItemId: ' + queueItem._id
  div= 'type: ' + queueItem.type
  div= 'priority: ' + queueItem.priority
  div= 'Status: ' + queueItem.status
  div workflowId: <a href="/workflows/view?workflowid=#{queueItem.workflowId}"> #{queueItem.workflowId} </a>
  div= 'lockedBy: ' + queueItem.lockedBy
  div= 'dateAdded: ' + queueItem.dateAdded
  div= 'activityCount: ' + queueItem.activityCount
  div= 'idleCount: ' + queueItem.idleCount
  div= 'busyCount: ' + queueItem.busyCount
  div= 'queueWorkerId: ' + queueItem.queueWorkerId
  div= 'timeStamp: ' + queueItem.timeStamp

  div= 'initiatingQueueItemId: ' + queueItem.initiatingQueueItemId
  

  div= 'Serialized queueItem:' + JSON.stringify(queueItem)

  h3 Item History

  table
    thead
        tr
            th Task
            th TimeStamp
            th WorkflowId
            th QueueWorkerId
            th Notes
    tbody
        each historyItem in queueItemHistory
            tr
                td= historyItem.task
                td= historyItem.timeStamp-queueItem.timeStamp
                td <a href='/workflows/view?workflowid=#{historyItem.workflowId}'>#{historyItem.workflowId}</a>
                td <a href='/workers/history?workerId=#{historyItem.queueWorkerId}'>#{historyItem.queueWorkerId}</a>
                td= historyItem.notes


 


  
