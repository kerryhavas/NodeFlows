block stylesheets
  link(rel='stylesheet', href='/stylesheets/chat.css')

block javascripts
 

section(class="main-content")
  h3= title

  div Logging To Memory Enabled: <a href='/log/history?logtomemory=#{!logToMemory}'>#{logToMemory}</a>
  div <a href='/log/history?clearlog=true'>Clear Log</a>

  table
    thead
        tr
            th Subsystem
            th Log
    tbody
        each logEntry in logHistory
            tr
                td= logEntry.subsystem
                td= logEntry.logText


 


  
