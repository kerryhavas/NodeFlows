
// woah!  I can use whack whack comments in jade
// also, more importantly, you can include things in the master page
block stylesheets
  link(rel='stylesheet', href='/stylesheets/chat.css')

block javascripts
 

section(class="main-content")
  h3= title

  form(method='post', action='/workflows/create')
    div
        input(type="hidden", name="workflowDefinition", value="#{workflowType}")
        Workflow Definition: #{workflowType}
        P
    if workflowModule.Parameters!=undefined       
        table
            each parameter in workflowModule.Parameters
                tr
                    if parameter.parameterType == "Select"
                        td
                            #{parameter.displayName}:  
                        td
                            select(name="Parameter_#{parameter.name}")        
                                option(value="") -- Select Parameter --
                                each optionChoice in parameter.options
                                    option(value="#{optionChoice.name}") #{optionChoice.name} 
                    else
                        td
                            #{parameter.name}:  
                        td
                            input(type="text", name="Parameter_#{parameter.name}", value="")
            tr
                td
                    ='More Data:' 
                td
                    input(type="text", name="args", value="{ 'FirstName': 'Charlie' }")
    div
        button(type='submit') Create
 


  
